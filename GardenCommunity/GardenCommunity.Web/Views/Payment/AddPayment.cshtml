        <div class="col-md-4">
            @Html.EditorFor(model => model.Indication.LastIndication, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Indication.LastIndication, "", new { @class = "text-danger" })
        </div>
