        <div class="col-md-4">
            @Html.EditorFor(model => model.PaidFor, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.PaidFor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
