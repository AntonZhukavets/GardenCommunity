<div>
    @Html.ActionLink("Back to List", "GetPayments", "Payment")
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "dd/M/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });
        });
    </script>
}