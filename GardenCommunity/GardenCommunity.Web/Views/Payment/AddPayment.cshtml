        <div class="col-md-4">
            @Html.EditorFor(model => model.Rate.BankCollectionPercent, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.Rate.BankCollectionPercent, "", new { @class = "text-danger" })
        </div>
    </div>

