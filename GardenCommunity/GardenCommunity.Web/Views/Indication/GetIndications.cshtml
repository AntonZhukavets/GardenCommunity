@model IEnumerable<GardenCommunity.Web.Models.Indication>

@{
    ViewBag.Title = "GetIndications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Avaliable indications</h2>

<p>
    @Html.ActionLink("Add new indication", "AddIndication", "Indication", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Month)</th>
        <th>@Html.DisplayNameFor(model => model.Year)</th>
        <th>@Html.DisplayNameFor(model => model.LastIndication)</th>
        <th>@Html.DisplayNameFor(model => model.CurrentIndication)</th>
        <th>@Html.DisplayNameFor(model => model.LoosesPercent)</th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
        <td>@Html.DisplayFor(modelItem => item.Month)</td>
        <td>@Html.DisplayFor(modelItem => item.Year)</td>
        <td>@Html.DisplayFor(modelItem => item.LastIndication)</td>
        <td>@Html.DisplayFor(modelItem => item.CurrentIndication)</td>
        <td>@Html.DisplayFor(modelItem => item.LoosesPercent)</td>
        <td>@Html.ActionLink("Edit", "EditIndication", "Indication", new { @id = item.Id }, new { @class = "btn btn-primary" })</td>
        <td>@Html.ActionLink("Remove", "RemoveIndication", "Indication", new { @id = item.Id }, new { @class = "btn btn-primary", @onclick = "return confirm('Are you sure you wish to remove this payment?');" })</td>

    </tr>
}

</table>
