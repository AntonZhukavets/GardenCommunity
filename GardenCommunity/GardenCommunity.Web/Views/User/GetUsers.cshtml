@model IEnumerable<GardenCommunity.Common.Entities.User>

@{
    ViewData["Title"] = "GetUsers";
}

<h2>Avaliable users</h2>

<table class="table">

    <tr>
        <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
        <th scope="col">@Html.DisplayNameFor(model => model.UserName)</th>
        <th scope="col">@Html.DisplayNameFor(model => model.Role.Name)</th>
        <th scope="col"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
            <td>@Html.DisplayFor(modelItem => item.UserName)</td>            
            <td>@Html.DisplayFor(modelItem => item.Role.Name)</td> 
            <td>
                @Html.ActionLink("Edit", "EditUser", "User", new { @id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Remove", "RemoveUser", "User", new { @id = item.Id }, new { @class = "btn btn-primary", @onclick = "return confirm('Are you sure you wish to remove this user?');" })
            </td>
        </tr>
    }
</table>
