@model GardenCommunity.Web.Models.Area

@{
    ViewBag.Title = "EditArea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditArea", "Area", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
